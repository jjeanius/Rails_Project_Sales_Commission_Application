<%= form_for @sales, url: sales_path do |f| %>

  <div class="action">
     <%=f.hidden_field :employee_id %>
  </div>
   
  <div class="action">
    <%= f.label :product_name %> :
        <%= f.collection_select(:product_id, Product.all, :id, :name) %> <br><br>
  </div>

  <div class="action">
    <%= f.label :quantity %> :
      <%= f.number_field :quantity %> shares <br><br>
  </div>

  <div class="action">
    <%= f.label :sales_rate %> $:
      <%= f.number_field :sales_rate %> per share <br><br>
  </div>

  <div class="action">
    <%= f.label :commission_rate %> : 
      <%= f.number_field :commission_rate %> bps <br><br>
  </div> <br>

    <%= f.submit "Submit" %> 
    
<% end %>