<br> <br>
<h5>
<%= form_for @sale, url: sales_path do |f| %>

   <div class="action">
      <%= f.label :employee_name %> :  <%= current_employee.name %>
      <!-- <%= f.collection_select(:employee_id, Employee.all, :id, :name) %> <br> <br> -->
      <%= f.hidden_field :employee_id %>
   </div> <br>

   <div class="action">
     <%= f.label :product_name %> :
      <%= f.collection_select(:product_name, Product.all, :name, :name) %><br><br>
    </div>

   <div class="action">
    <%= f.label :product_id %> Number:
      <%= f.collection_select(:product_id, Product.all, :id, :id) %> <br><br>
    </div>

   <div class="action">
     <%= f.label :quantity %> :
        <%= f.number_field :quantity %> shares  <br><br>
   </div>

    <div class="action">
      <%= f.label :sales_rate %> $:
        <%= f.number_field :sales_rate %> per share <br><br>
    </div>

    <div class="action">
      <%= f.label :commission_rate %> :
        <%= f.number_field :commission_rate %>  bps <br><br>
    </div> <br><br>

    <%= f.submit "Submit" %>

<% end %>
</h5>